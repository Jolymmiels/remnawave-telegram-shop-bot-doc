---
import type { ComponentProps } from "astro/types";

import Default from "@astrojs/starlight/components/SiteTitle.astro";
import GitHubStars from "./GitHubStars.astro";
import { version } from "../../package.json";

export type Props = ComponentProps<typeof Default>;
---

<Default {...Astro.props}>
	<slot />
</Default>

<div class="header-links">
	<a
		rel="noopener noreferrer"
		class="version-link"
		target="_blank"
	>
		{`${version}`}
	</a>
	<GitHubStars repo="Jolymmiels/remnawave-telegram-shop" />
</div>

<style>
	.header-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.version-link {
		display: flex;
		align-items: center;
		color: var(--sl-color-text-accent);
		text-decoration: none;
		font-size: var(--font-size-small);
		font-weight: 500;
		margin-left: 0.5rem;
		padding: 0.125rem 0.375rem;
		white-space: nowrap;
	}

	.version-link:hover {
		opacity: 0.66;
	}

	@media (max-width: 768px) {
		.header-links {
			gap: 0.25rem;
			margin-top: 0.25rem;
		}

		.version-link {
			font-size: 0.65rem;
			margin-left: 0.25rem;
			padding: 0.1rem 0.25rem;
		}
	}
</style>